<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_42dp"
    android:background="@color/purple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/abs_btn_left"
            android:layout_width="@dimen/dimen_42dp"
            android:layout_height="@dimen/dimen_42dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_toEndOf="@+id/abs_btn_left"
            android:layout_toLeftOf="@+id/abs_btn_right2"
            android:layout_toRightOf="@+id/abs_btn_left"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/abs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="@dimen/v2_textsize_20dp" />

            <TextView
                android:id="@+id/abs_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="subtitle"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_10dp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/abs_btn_right2"
            android:layout_width="@dimen/dimen_41dp"
            android:layout_height="@dimen/dimen_41dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/abs_btn_right"
            android:layout_toStartOf="@+id/abs_btn_right"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/abs_btn_right"
            android:layout_width="@dimen/dimen_41dp"
            android:layout_height="@dimen/dimen_41dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>
